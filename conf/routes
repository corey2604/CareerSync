# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index(request: Request)
# Serve index page from public directory
#GET     /                           controllers.FrontendController.index()
GET     /register                   controllers.RegisterController.register(request: Request)
GET     /logIn                      controllers.LogInController.logIn(request: Request)
GET     /upload                     controllers.HomeController.uploadFile(request: Request)
GET     /viewCv                     controllers.HomeController.viewCv(request: Request)
GET     /viewCvForUser              controllers.HomeController.viewCvForUser(request:Request, username: String, referenceCode: String)
GET     /ksaForm                    controllers.KsaFormController.loadForm(request: Request)
GET     /editKsas                   controllers.KsaFormController.editKsas(request: Request)
GET     /logOut                     controllers.HomeController.logOut(request: Request)
GET     /editAccount                controllers.EditAccountController.editAccount(request: Request)
GET     /uploadJobApplication       controllers.JobApplicationController.uploadJobApplication(request: Request)
GET     /uploadedJobSpecifications  controllers.JobApplicationController.getUploadedJobSpecifications(request: Request)
GET     /editJobDescription         controllers.JobApplicationController.editJobDescription(recruiter: String, referenceCode: String)
GET     /viewJobDescription         controllers.JobApplicationController.viewJobDescription(recruiter: String, referenceCode: String)
GET     /deleteJobDescription       controllers.JobApplicationController.deleteJobDescription(request: Request, referenceCode: String)
GET     /viewJobRecommendations     controllers.KsaMatcherController.viewJobRecommendations(request: Request)
GET     /getPotentialCandidates     controllers.JobApplicationController.getPotentialCandidates(recruiter: String, referenceCode: String)
GET     /getCandidateKsaProfile     controllers.JobApplicationController.getCandidateKsaProfile(firstName: String, surname: String, username: String)
GET     /getRecruiterDetails        controllers.JobApplicationController.viewUserDetails(recruiterUsername: String)

+nocsrf
POST    /register/submit            controllers.RegisterController.registerSubmit()
+nocsrf
POST    /logIn/submit               controllers.LogInController.logInSubmit()
+nocsrf
POST    /editAccount/update         controllers.EditAccountController.updateUserAccountDetails()
+nocsrf
POST    /jobDescription/submit      controllers.JobApplicationController.submitJobDescription(request: Request)
+nocsrf
POST    /ksaForm/submit             controllers.KsaFormController.submitForm(request: Request)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
